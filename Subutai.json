{
    "name": "${environmentName}",
    "description": "Private Blockchain Bootnode",
    "version": "0.0.1",
    "author": "https://github.com/lbthomsen",
    "ssh-key": "lth", 
    "containers": [
        {
            "hostname": "bn",
            "template": "debian-stretch",
            "peer-criteria": "BN-GROUP",
            "size": "${containerSize}"
        }
    ],
    "peer-criteria": [
        {
            "name": "BN-GROUP",
            "max-price": "25"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/lbthomsen/subutai-bp-eth-boot/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "ethereum_network_id", 
                "value": "${ethereumNetworkId}"
            }
        ], 
        "groups": [
            {
                "name": "bn",
                "hostnames": [
                    "bn"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "bn",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "SMALL",
            "validation": "SMALL,LARGE,HUGE"
        }, 
        "ethereumNetworkId": {
            "description": "Enter private blockchain ID (if network = private!)",
            "type": "string",
            "default": "",
            "validation": "[0-9]+"
        }
    }
}
